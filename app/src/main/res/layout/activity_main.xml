<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="15dp"
        android:textColor="#0000ff"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter your name"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvLoanAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loan Amount"
        android:layout_marginTop="15dp"
        android:textColor="#0000ff"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/etLoanAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Loan Amount (Rs.)"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:layout_marginTop="15dp"
        android:textColor="#0000ff"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/etRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Rate (%)"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvTenure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenure"
        android:layout_marginTop="15dp"
        android:textColor="#0000ff"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/etTenure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter Tenure (years)"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnEmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate EMI"
        android:layout_marginTop="15dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Fields"
        android:layout_marginTop="15dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="15dp"
        android:textColor="#0000ff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        />


</LinearLayout>